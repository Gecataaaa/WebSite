<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/styles.css">
    <style>
        /* Add your custom styles here */
    </style>
    <title>Nature Explorer</title>
</head>
<body>

    <!-- Header -->
    <header>
        <div class="container d-flex justify-content-between align-items-center">
            <h1>Nature Explorer</h1>
            <nav class="d-none d-md-flex">
                <ul class="d-flex">
                    <li><a href="#landing" class="active">Home</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#gallery">Discover</a></li>
                    <li><a href="#comments">Feedback</a></li>
                    <li><a href="#contact">Contact</a></li>

                </ul>
            </nav>
        </div>


    </header>


    <!-- Mobile Menu -->
    <div class="mobile-menu-container">
        <div class="mobile-menu-btn" onclick="toggleMobileMenu()">
            <div class="bar"></div>
            <div class="bar"></div>
            <div class="bar"></div>
        </div>
        <div class="mobile-menu" id="mobileMenu">

            <ul>
                <li><a href="#landing" class="active">Home</a></li>
                <li><a href="#about">About</a></li>
                <li><a href="#gallery">Discover</a></li>
                <li><a href="#comments">Feedback</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </div>
    </div>
    <!-- Landing Page Section -->
    <section id="landing">
        <div class="container">
            <h1>Nature Explorer</h1>
            <p>Welcome to the beauty of nature.</p>
        </div>
    </section>

    <!-- About Me Section -->
    <section id="about">
        <div class="container">
            <h2>Discover Nature</h2>
            <p>Embark on a journey to explore the wonders of the natural world. Connect with the serene landscapes and fascinating wildlife that our planet has to offer.</p>
            <p>Nature, to us, is not just a destination; it's an immersive experience that leaves you in awe of the Earth's beauty.</p>
        </div>
    </section>

    <!-- Gallery Section with Bootstrap Carousel -->
    <section id="gallery">
        <div class="container">
            <h2>Explore the Beauty</h2>
            <div id="imageCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/nature1.jpg" class="d-block w-100" alt="Nature Photo 1">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/nature2.jpg" class="d-block w-100" alt="Nature Photo 2">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/nature3.jpg" class="d-block w-100" alt="Nature Photo 3">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/nature4.jpg" class="d-block w-100" alt="Nature Photo 4">
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/nature5.jpg" class="d-block w-100" alt="Nature Photo 5">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#imageCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#imageCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </section>

    <!-- Comments Section -->
    <section id="comments">
        <div class="container">
            <h2>Feedback</h2>
            <div id="commentForm">
                <label for="commentName">Your Name:</label>
                <input type="text" id="commentName" name="commentName" required>

                <label for="commentText">Your Comment:</label>
                <textarea id="commentText" name="commentText" rows="4" required></textarea>

                <button type="button" onclick="submitComment()">Submit Comment</button>
            </div>
            <div id="recentComments">
                <h3>Recent Feedback</h3>
                <ul id="commentList">
                    @foreach (var comment in ViewBag.LastComments)
                    {
                        <li>@(comment.Name ?? "Unknown"): @(comment.Text ?? "")</li>
                    }
                </ul>


                @* Use Json.Serialize() to convert ViewData["AllComments"] to JSON *@
                @{
                    var allCommentsJson = Json.Serialize(ViewData["AllComments"]);
                }
                <input type="hidden" id="commentsHiddenField" value="@Html.Raw(allCommentsJson)" />
            </div>
        </div>
        <style>
            #comments {
                background-color: #fff;
                padding: 80px 0;
                text-align: center;
                display: flex;
                flex-direction: column;
                align-items: center;
            }

                #comments h2 {
                    font-size: 2.5em;
                    margin-bottom: 20px;
                }

            #commentForm {
                margin-bottom: 40px;
                max-width: 600px;
                margin: 0 auto;
                text-align: left;
            }

                #commentForm label {
                    display: block;
                    margin-bottom: 5px;
                    font-size: 1.2em;
                }

                #commentForm input,
                #commentForm textarea {
                    width: 100%;
                    padding: 10px;
                    margin-bottom: 20px;
                    border: 1px solid #ccc;
                    border-radius: 5px;
                }

                #commentForm button {
                    background-color: #333;
                    color: #fff;
                    padding: 10px 20px;
                    font-weight: bold;
                    font-size: 1.2em;
                    border: none;
                    border-radius: 5px;
                    cursor: pointer;
                }

                    #commentForm button:hover {
                        background-color: #555;
                    }

            #recentComments {
                max-width: 600px;
                margin: 0 auto;
                padding: 20px;
            }

                #recentComments h3 {
                    font-size: 1.8em;
                    margin-bottom: 20px;
                }

            #commentList {
                list-style: none;
                padding: 0;
            }

                #commentList li {
                    border: 1px solid #ccc;
                    margin-bottom: 15px;
                    padding: 15px;
                    border-radius: 5px;
                }
        </style>
    </section>

    

    <!-- Contact Me Section -->
    <section id="contact">
        <div class="container">
            <h2>Contact Us</h2>
            <p>Reach out to us for any inquiries or to share your experiences with nature.</p>
            <form action="mailto:gdimitov@gmail.com" method="post" class="contact-form">
                <label for="name">Your Name:</label>
                <input type="text" id="name" name="name" autocomplete="name" required>

                <label for="email">Your Email:</label>
                <input type="email" id="email" name="email" autocomplete="email" required>

                <label for="message">Your Message:</label>
                <textarea id="message" name="message" rows="4" autocomplete="message" required></textarea>

                <button type="submit" class="download-button">Send Message</button>
            </form>
        </div>
    </section>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>


    <script>

        function submitComment() {
            var name = document.getElementById('commentName').value;
            var text = document.getElementById('commentText').value;

            if (name && text) {
                var commentData = { Name: name, Text: text };

                // AJAX request to submit the comment
                $.ajax({
                    url: '/Home/SubmitComment',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(commentData),
                    success: function () {
                        // After submitting, reload comments
                        loadLastComments();
                    },
                    error: function (xhr, status, error) {
                        console.error("Error:", error);
                        // Display an error message to the user, e.g., using an alert or a dedicated UI element
                    }
                });

                // Clear the form fields
                document.getElementById('commentName').value = '';
                document.getElementById('commentText').value = '';
            } else {
                console.error("Name and text are required.");
            }
        }


        function loadLastComments() {
            // AJAX request to load the last comments
            $.ajax({
                url: '/Home/LoadLastComments',
                type: 'GET',
                success: function (data) {
                    // Ensure the data is an array
                    var comments = Array.isArray(data) ? data : [];

                    // Update the commentList element with the new comments
                    $('#commentList').empty();
                    comments.slice(-3).forEach(function (comment) {
                        var name = comment.Name || 'Unknown';
                        var text = comment.Text || '';
                        $('#commentList').append('<li>' + name + ': ' + text + '</li>');
                    });
                },
                error: function (xhr, status, error) {
                    console.error("Error:", error);
                    // Display an error message to the user, e.g., using an alert or a dedicated UI element
                }
            });
        }


        function toggleMobileMenu() {
            var mobileMenu = document.getElementById('mobileMenu');
            mobileMenu.classList.toggle('active');
        }



        



    </script>

</body>
</html>
